{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "types": ["node", "jest"] // Jest 타입 추가
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
